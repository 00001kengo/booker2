
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3"><%= render 'books/aaa', {book: @new, user: @user} %></div>
    <div class="col-md-8 offset-md-1">
      <h3>Book detail</h3>
      <table class="table table-hover table-inverse">
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>

          <tr>

            <td><%= link_to user_path(@user) do %>
              <%= attachment_image_tag @user, :profile_image_id, format: 'jpeg', fallback: "no_image.jpg", size: "40x40" %>
              <%= @user.name %>
              <% end %>
            </td>
            <td><%= @book.title %></td>
            <td><%= @book.body %></td>
            <% if @user == current_user %>
            <td><%= link_to 'Edit', edit_book_path %>|<%= link_to 'Destroy', book_path(@book.id),method: :delete %></rd>
            <% end %>
          </tr>

      </table>
    </div>
  </div>
</div>