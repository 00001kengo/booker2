<% if @user.errors.any? %>
  <%= @user.errors.count %>errors
  <% @user.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

      <h2>プロフィール編集</h2>
      <%= form_with model:@user, local:true do |f| %>
      <div class="form-group">
        <label for="inputName">Name</label>
      </div>
      <div class="form-group">
        <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
      </div>
      <div class="form-group">
        <label for="inputImage">ProfileImage</label>
      </div>
      <div class="form-group">
        <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
      </div>
      <div class="form-group">
        <label for="inputIntroduction">introduction</label>
      </div>
      <div class="form-group">
        <%= f.text_field :introduction, autofocus: true, id:"inputIntroduction", placeholder:"introduction"%>
      </div>
        <%= f.submit "Update User" %>
      <% end %>
    </div>
  </div>
</div>